
#Application shortcuts
alt+p
	dmenu_run
alt+F3
	st lf
alt+F2
	chromium
alt+shift+Return
	st
alt+shift+F3
	passmenu --type
alt+ctrl+n
	networkmanager_dmenu
alt+ctrl+m
	pavucontrol
alt+shift+a
	st ncmpcpp
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%
XF86AudioMicMute
	pactl set-source-mute 1 toggle
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86AudioPlay
	mpc toggle
XF86AudioPrev
	mpc prev
XF86AudioNext
	mpc next
alt+XF86AudioNext
	mpc seek +00:00:10
alt+XF86AudioPrev
	mpc seek -00:00:10
XF86ScreenSaver
	slock
XF86Display
	/home/david/.scripts/enableMonitor
alt+XF86Display
	/home/david/.scripts/disableMonitor
alt+shift+m
	st neomutt & mailsync
XF86MonBrightnessUp
	xbacklight -inc 5
XF86MonBrightnessDown
	xbacklight -dec 5
alt+F6
	sudo /home/david/.scripts/dmenumount
alt+shift+F6
	sudo /home/david/.scripts/dmenuunmount
alt+ctrl+r
	st newsboat
	
